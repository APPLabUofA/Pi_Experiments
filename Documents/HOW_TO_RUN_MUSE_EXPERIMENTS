source bin/activate
muselsl record --type eeg --exp Baseline_Stroke_Study


###Terminal 3###

cd Virtual_Envs/muse_exp
source bin/activate
python /home/pi/Pi_Experiments/Baseline_Stroke_Study/Task/Baseline_Stroke_Study_Updated.py


